# Copy -> compose.env (never commit secrets). You may paste all of this into the GitHub secret COMPOSE_ENV.

# Komodo image tag & backup location
COMPOSE_KOMODO_IMAGE_TAG=latest
COMPOSE_KOMODO_BACKUPS_PATH=/etc/komodo/backups

# DB credentials
KOMODO_DB_USERNAME=admin
KOMODO_DB_PASSWORD=changeme

# Komodo passkey for Core <-> Periphery auth
KOMODO_PASSKEY=a_random_passkey

# Timezone
TZ=Etc/UTC

# Komodo specific
KOMODO_HOST=https://demo.komo.do
KOMODO_TITLE=Komodo
KOMODO_FIRST_SERVER=https://periphery:8120
KOMODO_FIRST_SERVER_NAME=Local

# Webhooks / JWT
KOMODO_WEBHOOK_SECRET=a_random_secret
KOMODO_JWT_SECRET=a_random_jwt_secret
KOMODO_JWT_TTL="1-day"

# Admin init (change these)
KOMODO_LOCAL_AUTH=true
KOMODO_INIT_ADMIN_USERNAME=admin
KOMODO_INIT_ADMIN_PASSWORD=changeme
KOMODO_DISABLE_USER_REGISTRATION=false
KOMODO_ENABLE_NEW_USERS=false
KOMODO_DISABLE_NON_ADMIN_CREATE=false

# Periphery
PERIPHERY_ROOT_DIRECTORY=/etc/komodo
PERIPHERY_PASSKEYS=${KOMODO_PASSKEY}
PERIPHERY_DISABLE_TERMINALS=false
PERIPHERY_SSL_ENABLED=true

# Cloudflare Tunnel
CLOUDFLARE_TUNNEL_TOKEN= # <-- paste your tunnel token here (or set as GitHub secret)
CLOUDFLARE_TUNNEL_NAME=komodo-tunnel
